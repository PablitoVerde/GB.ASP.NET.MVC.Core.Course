@model Catalog

@{
    ViewData["Title"] = "Список товаров";
}

<div>
    Всего товаров: @Model.GetProducts().Count <br />
</div>

@if (Model.GetProducts().Count > 0)
{
    @foreach (var p in Model.GetProducts())
    {
        <div>
            Артикул: @p.Id <br />
            Название: @p.Name <br />
            Описание: @p.Description <br />
            <img src=@p.LinkToImage alt="logoimage"> <br />
        </div>
    }
}